                <li>上传头像</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <form class="layui-form">
                        <table class="layui-table info">
                            <colgroup>
                                <col width="20%">
                                <col width="60%">
                                <col width="20%">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>栏目</th>
                                    <th>值</th>
                                    <th>修改</th>
