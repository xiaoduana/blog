                <div class="layui-tab-item">
                    <form class="layui-form" action="">
                        <div class="layui-form-item">
                            <label class="layui-form-label">标题</label>
                            <div class="layui-input-inline">
                                <input type="text" name="title" required placeholder="请输入文章标题" autocomplete="off"
                                    class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">分类</label>
                            <div class="tags" id="tags" style="margin:40px 111px;">
                                <input type="text" name="" id="inputTags" placeholder="回车生成标签" autocomplete="off">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">内容</label>
                            <div class="layui-input-block" style="background-color: #fefefe">
                                <textarea id="article" style="display: none;"></textarea>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <div class="layui-input-block">
                                <button class="layui-btn" lay-submit lay-filter="article">发表文章</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="layui-tab-item">
                    <div class="layui-input-inline">
                        <input type="text" name="search" required placeholder="请输入 标题/分类/内容 关键词" autocomplete="off"
                            class="layui-input" id="search-input" style="width: 250px">
                    </div>
                    <div class="layui-btn" id="search-btn">查询</div>
                    <table class="layui-table" id="article-table">
                        <colgroup>
                            <col width="250">
                            <col width="100">
                            <col width="100">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>标题</th>
                                <th>发表时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
                <div class="layui-tab-item">
                    <button type="button" class="layui-btn" id="upload">
                        <i class="layui-icon">&#xe67c;</i>上传图片
                    </button>
                </div>
            </div>
        </div>

    </div>

    <script>
        //注意：选项卡 依赖 element 模块，否则无法进行功能性操作
        layui.use(['element', "form", "layedit", "inputTags", "upload"], function () {
            //选项卡
            var element = layui.element;

            //富文本
            var layedit = layui.layedit;
            var index = layedit.build('article'); //建立编辑器

            //标签
            var inputTags = layui.inputTags;
            inputTags.render({
                elem: '#inputTags',
                content: [],
                aldaBtn: false
            });

            //上传头像
            var upload = layui.upload;
            var uploadInst = upload.render({
                elem: '#upload' //绑定元素
                , url: '/upload/photo' //上传接口
                , done: function (data) {
                    if (data.code === 1) {
                        layer.alert(data.msg, function () {
                            location.reload();
                        });
                    } else {
                        layer.alert(data.msg, function () {
                            layer.close(layer.index);
                        });
                    }
                }
            });

            //表单
            var form = layui.form;
            //前端验证
            form.verify({
                age: function (value) {
                    if (value) {
                        var intValue = parseInt(value);
                        if (value != intValue) return "年龄不正确";
                    }
                }
                , tel: function (value) {
                    if (value) {
                        if (!/^1[345678]\d{9}$/.test(value)) return "手机号格式不正确";
                    }
                }
                , mail: function (value) {
                    if (value) {
                        if (!/^[\da-z_]+@[\da-z]+(\.[a-z]+)+$/i.test(value)) return "邮箱格式不正确";
                    }
                },
                password: function (value) {
                    //var len = value.length;
                    //if(len<6 || len>18)return "密码格式不正确！";
                    //数字 字母 _!@#$%^&*()+{}[]-=,.<>?
                    if (!/^[\da-z_,!@#\$%\^&*()+\[\]{}\-=\.<>?]{6,18}$/i.test(value)) {
                        return "密码格式不正确！"
                    }
                },
                password2: function (value) {
                    //获取password框的value
                    let val = $("#reg-password").val();
                    //console.log(val);
                    //和确认密码框的value做比较
                    if (value !== val) {
                        return "两次密码输入不一致！";
                    }
                }
            });
            //监听个人信息修改
            form.on('submit(update)', function (data) {
                //console.log(data.field);
                var postData = {
                    age: data.field.age - 0
                    , sex: data.field.sex || ""
                    , email: data.field.email
                    , tel: data.field.tel
                    , status: data.field.status
                };

                $.ajax({
                    method: "POST"
                    , url: "/update"
                    , data: postData
                    , success: function (data) {
                        if (data.code === 1) {
                            layer.alert(data.msg, function () {
                                location.reload();
                            });
                        } else {
                            layer.alert(data.msg, function () {
                                layer.close(layer.index);
                            });
                        }
                    }
                });



                return false;
            });
            //监听重置密码
            form.on('submit(resetpwd)', function (data) {
                //console.log(data.field);
                var postData = {
                    oldpwd: data.field.password
                    , newpwd: data.field.newpassword
                };

                $.ajax({
                    method: "POST"
                    , url: "/resetpwd"
                    , data: postData
                    , success: function (data) {
                        if (data.code === 1) {
                            layer.alert(data.msg, function () {
                                location.reload();
                            });
                        } else {
                            layer.alert(data.msg, function () {
                                layer.close(layer.index);
                            });
                        }
                    }
                });



                return false;
            });
            //监听文章发表
            form.on("submit(article)", function (data) {
                var $tags = $("#tags span em"),
                    $content = $("#article");

                var postData = {
                    title: data.field.title
                    , tags: []
                    , content: layedit.getContent(index)
                };
                $tags.each(function () { postData.tags.push($(this).text()) });

                $.ajax({
                    method: "POST"
                    , url: "/article"
                    , data: postData
                    , success: function (data) {
                        if (data.code === 1) {
                            layer.alert(data.msg, function () {
                                location.reload();
                            });
                        } else {
                            layer.alert(data.msg, function () {
                                layer.close(layer.index);
                            });
                        }
                    }
                })


                return false;
            });
        });
    </script>
    <script>
        //修改按钮的点击
        (function () {
            var $update = $("#usercenter table.info .update");
            $update.click(function () {
                var $content = $(this).parent().siblings(".info-content");
                $content.find(".show").toggle();
                $content.find(".hide").toggle();
            });
        })();
        //文章管理
        (function () {
            var $searchBtn = $("#search-btn")
                , $searchInput = $("#search-input")
                , $tbody = $("#article-table tbody")
                ;

            //查找按钮的点击
            $searchBtn.click(function () {
                let val = $searchInput.val();

                $.ajax({
                    method: "POST"
                    , url: "/search"
                    , data: { keyword: val }
                    , success: function (data) {
                        if (data.code === 1) {
                            append(data.data);
                        } else {
                            layer.alert(data.msg, function () {
                                layer.close(layer.index);
                            });
                        }
                    }
                });
            });

            //删除按钮添加事件
            function append(data) {
                var html = "";
                data.forEach(v => {
                    html += `<tr><td><a href="/article/${v._id}">${v.title}</a></td><td>${new Date(v.date)}</td><td><div class="layui-btn delete">删除</div></td></tr>`;
                });
                $tbody.append(html);

                var $delete = $tbody.find(".delete");
                $delete.each(function (i) { $(this).data("_id", data[i]) })
                $delete.click(function () {
                    var _id = $(this).data("_id");
                    var $this = $(this);
                    $.ajax({
                        method: "post",
                        url: "/delete",
                        data: { _id },
                        success: function (data) {
                            if (data.code === 1) {
                                $this.parent().parent().remove();
                            } else {
                                layer.alert(data.msg, function () {
                                    layer.close(layer.index);
                                });
                            }
                        }
                    });
                });
            }

        })();
    </script>


