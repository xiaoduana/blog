                            <tbody>
                                <tr>
                                    <td>用户名</td>
                                    <td class="info-content"><%=username%></td>
                                </tr>
                                <tr>
                                    <td>性别</td>
                                    <td class="info-content">
                                        <div class="show"><%=userInfo.sex||"保密"%></div>
                                        <div class="hide" style="display: none">
                                            <div class="layui-form-item">
                                                <!--<label class="layui-form-label">单选框</label>-->
